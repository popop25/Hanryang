{
  "compilerOptions": {
    "composite": true, // 프로젝트 참조를 위한 필수 설정
    "target": "ESNext",
    "module": "CommonJS", // Node.js 환경에서는 CommonJS 모듈 사용
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": false, // composite와 충돌 방지
    "declaration": true, // 타입 선언 파일 생성
    "declarationMap": true, // 타입 선언 파일의 소스맵 생성
    "outDir": "./dist", // 출력 디렉토리 설정
    "baseUrl": "./"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
